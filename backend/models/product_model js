import mongoose from 'mongoose';

const productSchema = new mongoose.Schema({
  name: {
    type: String,
    trim: true,
    required: true
  },
  description: {
    type: String,
    required: true,
    maxlength: 2000
  },
  price: {
    type: Number,
    trim: true,
    required: true
  },
  category: {
    type: ObjectId,
    ref: 'Category',
    required: true
  },
  photo: {
    data:Buffer,
    contentType:Sring
  }

}, {timestamps: true});


export default mongoose.model('Product', productSchema);
